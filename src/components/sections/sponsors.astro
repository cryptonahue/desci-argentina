---
import { Button } from "@/components/ui/button";
import { sponsors1, sponsors2, sponsors3 } from "@/config/landing";
import { Icon } from "astro-icon/components";
import HeaderSection from "./header-section.astro";
import { Image } from "astro:assets";
import { LOCALES, useTranslations, type Lang } from "@/i18n";
const t = useTranslations(Astro.currentLocale as Lang);
---

<section>
  <div class="pb-6 pt-28">
    <div class="container max-w-6xl">
      <!--    <HeaderSection
        label="MADE POSSIBLE BY"
        title="Organizado por "
        subtitle="Harum quae dolore inventore repudiandae? orrupti aut temporibus ariatur."
      />  -->
      <h2
        id="#Speakers"
        class="mt-12 font-heading text-3xl md:text-4xl lg:text-[40px]"
      >
        {
          t({
            es: "Sponsors",
            en: "August 12th and 13th",
            pt: "12 e 13 de agosto",
          })
        }
      </h2>

      <div class="mt-6 grid gap-3 sm:grid-cols-2 lg:grid-cols-5">
        {
          sponsors1.map((sponsors1) => (
            <a href={sponsors1.link} target="_blank">
              <div class="group relative overflow-hidden  rounded-2xl border border-transparent hover:border hover:border-white cursor-pointer flex justify-center p-5 md:p-8">
                <div
                  aria-hidden="true"
                  class="absolute inset-0 aspect-video  -translate-y-1/2 rounded-full  bg-gradient-to-b from-purple-500/80 to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
                />

                <img
                  class="max-w-[100px]"
                  src={sponsors1.image}
                  alt={sponsors1.alt}
                />
              </div>
            </a>
          ))
        }
      </div>

      <h2 class="mt-6 font-heading text-2xl md:text-4xl lg:text-[24px]">
        {
          t({
            es: "Hecho posible por",
            en: "August 12th and 13th",
            pt: "12 e 13 de agosto",
          })
        }
      </h2>

      <div class="mt-6 grid gap-3 sm:grid-cols-2 lg:grid-cols-5">
        {
          sponsors1.map((sponsors1) => (
            <a href={sponsors1.link} target="_blank">
              <div class="group relative overflow-hidden  rounded-2xl border border-transparent hover:border hover:border-white cursor-pointer flex justify-center p-5 md:p-8">
                <div
                  aria-hidden="true"
                  class="absolute inset-0 aspect-video  -translate-y-1/2 rounded-full  bg-gradient-to-b from-purple-500/80 to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
                />

                <img
                  class="max-w-[80px]"
                  src={sponsors1.image}
                  alt={sponsors1.alt}
                />
              </div>
            </a>
          ))
        }
      </div>

      <h2 class="mt-6 font-heading text-3xl md:text-4xl lg:text-[24px]">
        {
          t({
            es: "Community partners",
            en: "August 12th and 13th",
            pt: "12 e 13 de agosto",
          })
        }
      </h2>

      <div class="mt-6 grid gap-3 sm:grid-cols-2 lg:grid-cols-5">
        {
          sponsors1.map((sponsors1) => (
            <a href={sponsors1.link} target="_blank">
              <div class="group relative overflow-hidden  rounded-2xl border border-transparent hover:border hover:border-white cursor-pointer flex justify-center p-5 md:p-8">
                <div
                  aria-hidden="true"
                  class="absolute inset-0 aspect-video  -translate-y-1/2 rounded-full  bg-gradient-to-b from-purple-500/80 to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
                />
                <img
                  class="max-w-[70px]"
                  src={sponsors1.image}
                  alt={sponsors1.alt}
                />
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
